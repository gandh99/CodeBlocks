<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar.Bridge">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimaryDark</item>
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily" tools:targetApi="jelly_bean">sans-serif-light</item>
    </style>

    <style name="TextInputLayout" parent="TextAppearance.AppCompat">
        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColorHint">@color/colorGrey</item>
        <item name="android:textSize">18sp</item>

        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="colorAccent">@color/colorPrimaryDark</item>
        <item name="colorControlNormal">@color/colorGrey</item>
        <item name="colorControlActivated">@color/colorPrimaryDark</item>
    </style>

    <!-- TextInput fields -->
    <style name="TextInputLayoutStyle">
        <item name="android:layout_marginTop">12dp</item>
    </style>

    <style name="TextInputEditTextCredentials">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:layout_marginHorizontal" tools:targetApi="o">20dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:backgroundTint" tools:targetApi="lollipop">@color/colorGrey</item>
        <item name="android:singleLine">true</item>
        <item name="android:drawablePadding">10dp</item>
    </style>

    <style name="TextInputEditTextUsername" parent="TextInputEditTextCredentials">
        <item name="android:maxLength">10</item>
    </style>

    <style name="TextInputEditTextPassword" parent="TextInputEditTextCredentials">
        <item name="android:maxLength">10</item>
    </style>

    <style name="TextInputEditTextCreate" parent="TextInputEditTextCredentials">
        <item name="android:layout_marginHorizontal" tools:targetApi="o">0dp</item>
    </style>

    <style name="ButtonCredentials">
        <item name="android:textColor">#ffffff</item>
        <item name="android:layout_marginHorizontal" tools:targetApi="o">20dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">36dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/shape_credentials_button</item>
    </style>

    <style name="ListItem">
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:layout_marginTop">2.5dp</item>
    </style>

    <!-- Custom dialogs -->
    <style name="DialogHeader">
        <item name="android:textSize">20dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">20dp</item>
        <item name="android:paddingBottom">20dp</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="DialogEditText" parent="TextInputEditTextCredentials">
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:layout_marginTop">15dp</item>
    </style>

    <style name="DialogButton" parent="ButtonCredentials">
    </style>

    <style name="CreateButton">
        <item name="android:background">@drawable/shape_create_button</item>
        <item name="android:textColor">#ffff</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Sort and filter dialogs -->
    <style name="SortFilterDialog">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="SortFilterTextView" parent="SortFilterDialog">
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginBottom">12dp</item>
    </style>

    <style name="SortFilterRadioGroup" parent="SortFilterDialog">
        <item name="android:layout_marginBottom">20dp</item>
    </style>

    <style name="SortFilterRadioButton" parent="SortFilterDialog">
    </style>

    <style name="SortFilterButton" parent="SortFilterDialog">
        <item name="android:background">@null</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!-- User profile page -->
    <style name="UserProfileCompoundDrawable">
        <item name="android:gravity">left</item>
        <item name="android:textSize">16sp</item>
        <item name="android:drawablePadding">16dp</item>
        <item name="android:layout_marginTop">20dp</item>
    </style>

</resources>
