<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >

        <LinearLayout
            android:id="@+id/layout_task_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_margin="25dp"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/list_item_task_day_created"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="24sp"
                android:gravity="center"
                android:text="Day Created"
                style="@style/ListItem"
                />

            <TextView
                android:id="@+id/list_item_task_month_created"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Month Created"
                style="@style/ListItem"
                />

        </LinearLayout>

        <View
            android:id="@+id/vertical_line"
            android:layout_width="1dp"
            android:layout_height="80dp"
            android:background="@color/colorGrey"
            android:layout_marginVertical="20dp"
            android:layout_toRightOf="@id/layout_task_date"
            />

        <RelativeLayout
            android:id="@+id/layout_task_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/vertical_line"
            android:layout_centerVertical="true"
            android:layout_marginLeft="25dp"
            >

            <TextView
                android:id="@+id/list_item_task_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Task Title"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/colorGrey"
                android:maxLines="1"
                android:ellipsize="end"
                style="@style/ListItem"
                />

            <TextView
                android:id="@+id/list_item_task_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:layout_below="@id/list_item_task_title"
                android:text="Description"
                style="@style/ListItem"
                />

            <ImageView
                android:id="@+id/imageView_alarm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/list_item_task_description"
                android:layout_alignBottom="@id/list_item_task_deadline"
                android:src="@drawable/ic_alarm_grey"
                />

            <TextView
                android:id="@+id/list_item_task_deadline"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/imageView_alarm"
                android:layout_below="@+id/list_item_task_description"
                android:textStyle="italic"
                android:text="Deadline"
                style="@style/ListItem"
                />

        </RelativeLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>