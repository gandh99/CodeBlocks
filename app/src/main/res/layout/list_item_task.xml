<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardCornerRadius="10dp"
    >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >

        <View
            android:id="@+id/priority_colour"
            android:layout_width="10dp"
            android:layout_height="190dp"
            android:background="@color/colorGrey"
            />

        <LinearLayout
            android:id="@+id/layout_task_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="25dp"
            android:layout_marginTop="40dp"
            android:gravity="center"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/list_item_task_day_created"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="24sp"
                android:text="DD"
                style="@style/ListItem"
                />

            <TextView
                android:id="@+id/list_item_task_month_created"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="MTH"
                style="@style/ListItem"
                />

        </LinearLayout>

        <View
            android:id="@+id/vertical_line"
            android:layout_width="1dp"
            android:layout_height="110dp"
            android:background="@color/colorGrey"
            android:layout_marginVertical="20dp"
            android:layout_toRightOf="@id/layout_task_date"
            />

        <RelativeLayout
            android:id="@+id/layout_task_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/vertical_line"
            android:layout_toLeftOf="@+id/layout_task_deadline"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="25dp"
            >

            <TextView
                android:id="@+id/list_item_task_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Task Title"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/colorGrey"
                android:maxLines="1"
                android:ellipsize="end"
                style="@style/ListItem"
                />

            <TextView
                android:id="@+id/list_item_task_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:layout_below="@id/list_item_task_title"
                android:maxLines="2"
                android:ellipsize="end"
                android:text="Description"
                style="@style/ListItem"
                />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/layout_task_deadline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView_alarm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/ic_alarm_grey"
                />

            <TextView
                android:id="@+id/list_item_task_deadline_countdown"
                style="@style/ListItem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Deadline"
                android:textStyle="italic"
                android:textSize="11sp"
                />

        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/linearLayout_task_actions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/textView_edit_task"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_marginHorizontal="30dp"
            android:drawableLeft="@drawable/ic_edit_grey_24dp"
            android:text="@string/edit"
            />

        <TextView
            android:id="@+id/textView_comment_task"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_marginHorizontal="10dp"
            android:drawableLeft="@drawable/ic_comment_grey_24dp"
            android:text="@string/comment"
            />

        <TextView
            android:id="@+id/textView_done_task"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_marginHorizontal="30dp"
            android:drawableLeft="@drawable/ic_check_grey_24dp"
            android:text="@string/done"
            />

    </LinearLayout>

</androidx.cardview.widget.CardView>