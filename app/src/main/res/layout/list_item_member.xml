<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardCornerRadius="10dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >

        <ImageView
            android:id="@+id/imageView_member_profile_picture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/linearLayout_member_details"
            android:layout_marginLeft="12dp"
            android:src="@drawable/ic_account_circle_blue_60dp"
            />

        <LinearLayout
            android:id="@+id/linearLayout_member_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/imageView_member_profile_picture"
            android:orientation="vertical"
            android:layout_margin="10dp">

            <TextView
                android:id="@+id/list_item_member_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Username"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#000000"
                style="@style/ListItem"
                />

            <TextView
                android:id="@+id/list_item_member_rank"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="2.5dp"
                android:text="Rank"
                style="@style/ListItem"
                />

        </LinearLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>