<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:isScrollContainer="false"
    android:fillViewport="false"
    tools:context=".homePage.userProfile.UserProfileFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginVertical="48dp"
        android:layout_marginHorizontal="60dp"
        android:orientation="vertical"
        >

        <ImageView
            android:id="@+id/imageView_profile_picture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/ic_account_circle_blue"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:textSize="18sp"
            android:textStyle="bold"
            android:text="@string/username"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_location_city_blue"
            android:text="Location"
            style="@style/UserProfileCompoundDrawable"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_business_blue"
            android:text="Company"
            style="@style/UserProfileCompoundDrawable"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_work_blue"
            android:text="Job Title"
            style="@style/UserProfileCompoundDrawable"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_email_blue"
            android:text="example_mail@hotmail.com"
            style="@style/UserProfileCompoundDrawable"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_web_blue"
            android:text="www.github.com/usersname"
            style="@style/UserProfileCompoundDrawable"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_message_blue"
            android:text="Personal message. Hello, I am a passionate developer! I am proficient in many languages"
            style="@style/UserProfileCompoundDrawable"
            />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="48dp"
            android:text="Edit Profile"
            style="@style/CreateButton"
            />

    </LinearLayout>

</androidx.core.widget.NestedScrollView>